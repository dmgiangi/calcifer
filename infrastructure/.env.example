# =============================================================================
# Calcifer Infrastructure - Environment Variables Template
# =============================================================================
# Copy this file to .env and customize values
# DO NOT commit .env to version control!
# =============================================================================

# ========================= MONGODB =========================
MONGO_USERNAME=calcifer_user
MONGO_PASSWORD=<CHANGE_ME>

# ========================= REDIS =========================
REDIS_USERNAME=machine_user
REDIS_PASSWORD=<CHANGE_ME>

# ========================= RABBITMQ =========================
# Admin user (created automatically by RabbitMQ)
RABBITMQ_ADMIN_USERNAME=admin
RABBITMQ_ADMIN_PASSWORD=<CHANGE_ME>

# User passwords (referenced in rabbitmq-users.csv)
# Add new password variables here when adding users to the CSV
RABBITMQ_IOT_PASSWORD=<CHANGE_ME>
# RABBITMQ_APP_PASSWORD=<CHANGE_ME>
# RABBITMQ_READONLY_PASSWORD=<CHANGE_ME>

# ========================= GRAFANA =========================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=<CHANGE_ME>
GRAFANA_ROOT_URL=http://localhost:3000

# ========================= DOCKER =========================
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=<YOUR_DOCKERHUB_USERNAME>
IMAGE_TAG=latest

